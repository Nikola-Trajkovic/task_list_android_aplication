<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
   >

    <ImageView
        android:id="@+id/ticketPictureIvInProgress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/naslovTvInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"


        android:layout_marginTop="10dp"
        android:text="TextView"


        app:layout_constraintStart_toEndOf="@+id/ticketPictureIvInProgress"
        app:layout_constraintTop_toTopOf="@+id/ticketPictureIvInProgress"

        />

    <TextView
        android:id="@+id/opisTvInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"


        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/ticketPictureIvInProgress"
        app:layout_constraintStart_toStartOf="@+id/naslovTvInProgress"
        app:layout_constraintTop_toBottomOf="@+id/naslovTvInProgress" />

    <ImageButton
        android:id="@+id/nextBtnInProgress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/naslovTvInProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ticketPictureIvInProgress"
        app:layout_constraintTop_toTopOf="@+id/ticketPictureIvInProgress"
        app:srcCompat="@drawable/strelica_desno" />

    <ImageButton
        android:id="@+id/imageButtonInProgress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/ticketPictureIvInProgress"
        app:layout_constraintEnd_toEndOf="@+id/nextBtnInProgress"
        app:layout_constraintStart_toStartOf="@+id/nextBtnInProgress"
        app:srcCompat="@drawable/strelica_levo" />

</androidx.constraintlayout.widget.ConstraintLayout>